{
  "schemaVersion": 1,
  "id": "informedload",
  "version": "${version}",

  "name": "Informed Load",
  "description": "Tells you what's actually going on while Minecraft is loading!",
  "authors": [
    "GiantNuker"
  ],
  "contact": {
    "homepage": "https://minecraft.curseforge.com/projects/informed-load",
    "sources": "https://github.com/Indi-Code/Informed-Load",
    "issues": "https://github.com/Indi-Code/Informed-Load/issues"
  },
  "custom": {
    "modmenu:clientsideOnly": true
  },

  "license": "CC0-1.0",
  "icon": "assets/informedload/icon.png",

  "environment": "client",
  "entrypoints": {
    "entry_handler": [
      "io.github.giantnuker.fabric.informedload.InformedEntrypointHandler"
    ],
    "preLaunch": [
      "io.github.giantnuker.fabric.informedload.PreLaunch"
    ],
    "main": [
      "io.github.giantnuker.fabric.informedload.InformedLoadUtils"
    ],
    "mm:early_risers": [
      "io.github.giantnuker.fabric.informedload.EarlyRiser"
    ]
  },
  "depends": {
    "fabricloader": ">=0.7.2"
  },
  "mixins": [
    "informedload.mixins.json"
  ]
}
